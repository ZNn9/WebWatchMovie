$white = #fff
$black = #000
$grey = #c7c7c7

$bg = #2b2b31
$bg2 = #28282d

$clr1 = #ff55a5
$clr2 = #ff5860

$gr1 = linear-gradient(90deg, rgb(255,85,165) 0%, rgb(255,88,96) 100%)
$gr2 = linear-gradient(90deg, rgb(255,88,96) 0%, rgb(255,85,165) 100%)
$gr3 = linear-gradient(90deg, rgba(255,85,165,.05) 0%, rgba(255,88,96,.05) 100%)

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Ubuntu:wght@300;400;500&display=swap')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Ubuntu', sans-serif
	background-color $bg
	font-weight normal
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow, opacity
	cursor pointer
	&:focus
		outline none
a
	text-decoration none
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow, opacity
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	appearance none
	box-shadow none
	transition .5s ease
	transition-property color, border-color, box-shadow
	&:focus
		outline none

select::-ms-expand
	display none

input::-webkit-outer-spin-button
input::-webkit-inner-spin-button
	-webkit-appearance none
	margin 0

input[type=number]
	-moz-appearance textfield

ul
	margin 0
	padding 0
	list-style none

svg
	transition fill .5s ease

::-moz-selection
	background $white
	color $black
	text-shadow none
::selection
	background $white
	color $black
	text-shadow none

::-webkit-input-placeholder
	color $grey
	opacity 1
::-moz-placeholder
	color $grey
	opacity 1
:-moz-placeholder
	color $grey
	opacity 1
:-ms-input-placeholder
	color $grey
	opacity 1

:focus
	outline -webkit-focus-ring-color auto 0px
:focus-visible
	outline 0px dotted

body::-webkit-scrollbar
	width 16px

body::-webkit-scrollbar-track
	background $bg2

body::-webkit-scrollbar-thumb
	background-color rgba($white, .05)
	outline 0 solid $white

/*==============================
	Header
==============================*/
.header
	position fixed
	top 0
	left 0
	right 0
	background-color $bg
	z-index 100
	transition .5s ease
	box-shadow 0 5px 25px 0 rgba($black, .2)
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		height 70px
		width 100%
		position relative
		padding 0 15px
	&__logo
		display flex
		justify-content center
		align-items center
		height 70px
		padding 0 20px
		background-color $bg2
		width 140px
		img
			width 100%
			max-width 100px
			display block
		&:hover
			background-color $bg
	&__btn
		display flex
		flex-direction column
		justify-content center
		align-items center
		width 24px
		height 20px
		position relative
		span
			display block
			position absolute
			height 2px
			width 24px
			opacity 1
			left 0
			transition .5s ease
			background-color $white
			border-radius 2px
			&:nth-child(1)
				top 0	
			&:nth-child(2)
				top 9px
			&:nth-child(3)
				bottom 0
		&--active
			span:nth-child(1)
				top 9px
				transform rotate(45deg)
			span:nth-child(2)
				opacity 0
			span:nth-child(3)
				bottom 9px
				transform rotate(-45deg)
	@media (min-width: 576px)
		&__logo
			width 156px
	@media (min-width: 1200px)
		display none

/*==============================
	Sidebar
==============================*/
.sidebar
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start
	background-color $bg2
	position fixed
	top 0
	left 0
	bottom 0
	z-index 101
	width 280px
	transform translate3d(-280px, 0, 0)
	transition .5s ease
	box-shadow none
	&--active
		transform translate3d(0, 0, 0)
		box-shadow 0 5px 25px 0 rgba($black, .2)
	&__logo
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 70px
		min-height 70px
		padding 0 30px
		background-color $bg2
		width 100%
		position relative
		&:before
			content ''
			position absolute
			bottom 0
			left 0
			right 0
			height 2px
			display block
			background-image linear-gradient( 90deg, rgb(255,85,165) 0%, rgb(255,88,96) 100%)
			box-shadow 0 0 20px 0 rgba(255, 88, 96, 0.5)
			pointer-events none
		img
			width 100%
			max-width 100px
			display block
		&:hover
			background-color $bg
	&__user
		padding 20px 30px
		width 100%
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		border-bottom 1px solid rgba($white, .05)
	&__user-img
		display flex
		flex-direction column
		justify-content center
		align-items center
		width 40px
		height 40px
		border-radius 50%
		overflow hidden
		margin-right 12px
		img
			width 100%
	&__user-title
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		p
			color $white
			display block
			font-size 16px
			line-height 24px
			font-weight 500
			margin-bottom 0
		span
			display block
			font-family 'Open Sans', sans-serif
			color $grey
			font-size 10px
			line-height 16px
	&__user-btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 40px
		width 40px
		border-radius 8px
		background-color rgba($white, .05)
		box-shadow 0 0 20px 0 rgba($black, .05)
		margin-left auto
		svg
			fill $white
			width 24px
			height 24px
		&:hover
			box-shadow 0 0 20px 0 rgba($black, .15)
	&__nav
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		position relative
		padding 30px
		width 100%
	&__nav-link
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		font-size 14px
		height 36px
		font-weight 400
		color $white
		white-space nowrap
		font-family 'Open Sans', sans-serif
		text-transform uppercase
		svg
			width 18px
			height auto
			margin-right 12px
			fill $white
		&:hover
		&[aria-expanded="true"]
			color $clr1
			svg
				fill $clr1
		&--active
			color $clr1
			cursor default
			svg
				fill $clr1
	&__nav-item
		width 100%
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		margin-bottom 10px
		position relative
		&:last-child
			margin-bottom 0
	&__dropdown-menu
		position absolute
		background-color $bg
		padding 20px
		display flex !important
		flex-direction column
		justify-content flex-start
		align-items flex-start
		min-width 180px
		z-index -1
		pointer-events none
		opacity 0
		box-shadow 0 5px 25px 0 rgba($black, .2)
		transition .5s ease
		margin-top -10px
		top 100%
		border-radius 4px
		overflow hidden
		border none
		&:before
			content ''
			position absolute
			top 0
			left 0
			right 0
			height 2px
			display block
			background $gr1
			box-shadow 0 0 20px 0 rgba(255, 88, 96, 0.5)
		li
			width 100%
			margin-bottom 10px
			&:last-child
				margin-bottom 0
		a
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			font-size 14px
			font-family 'Open Sans', sans-serif
			color $white
			height 30px
			width 100%
			font-weight 400
			&:hover
				color $clr1
		&.show
			z-index 1000
			pointer-events auto
			opacity 1
			margin-top 0
	&__copyright
		margin-top auto
		padding 0 30px 20px
		color $grey
		font-size 12px
		font-family 'Open Sans', sans-serif
		a
			color $grey
			&:hover
				text-decoration underline
	@media (min-width: 1200px)
		transform translate3d(0, 0, 0)
		box-shadow 0 5px 25px 0 rgba($black, .2)
		&__logo
			height 80px

/*==============================
	Main
==============================*/
.main
	position relative
	margin-top 70px
	padding 25px 0 40px
	&__title
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		flex-wrap wrap
		margin-bottom 5px
		border-bottom 1px solid rgba($white, .05)
		padding-bottom 25px
		h2
			color $white
			font-weight 300
			font-size 32px
			line-height 100%
			margin-bottom 0
			b
				font-weight 700
	&__title-stat
		font-family 'Open Sans', sans-serif
		color $grey
		font-size 14px
		margin-left 20px
		margin-top 9px
	&__title-wrap
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		margin-left auto
		width 100%
		margin-top 20px
	&__title-form
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		position relative
		margin-top 20px
		width 100%
		input
			width 100%
			height 46px
			border 1px solid rgba($white, .05)
			position relative
			z-index 1
			background-color $bg2
			border-radius 8px
			padding 0 60px 0 20px
			font-size 14px
			font-family 'Open Sans', sans-serif
			font-weight 400
			color $white
			&:focus
				border-color rgba($white, .15)
		button
			position absolute
			z-index 2
			display flex
			flex-direction row
			justify-content center
			align-items center
			right 20px
			width 20px
			height 20px
			opacity .5
			transition opacity .5s ease
			svg
				width 18px
				height auto
				fill $white
			&:hover
				opacity 1
	&__title-link
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 40px
		width 120px
		border-radius 8px
		background $gr2
		box-shadow 0 0 16px 0 rgba($clr2, .3)
		position relative
		margin-left auto
		&:before
			content ''
			position absolute
			z-index 1
			top 0
			right 0
			bottom 0
			left 0
			background $gr1
			border-radius 8px
			opacity 1
			transition opacity .5s ease
		span
			position relative
			z-index 2
			font-size 14px
			color $white
			text-transform uppercase
			font-weight 600
			font-family 'Open Sans', sans-serif
		&:hover
			box-shadow 0 0 16px 0 rgba($clr2, .6)
			&:before
				opacity 0
	&__paginator
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		width 100%
	&__paginator-pages
		display inline-flex
		flex-direction row
		justify-content center
		align-items center
		font-size 12px
		height 40px
		color $grey
		font-weight 400
		margin-top 40px
		cursor default
		border-radius 8px
		background-color $bg2
		border 1px solid rgba($white, .05)
		padding 0 20px
		font-family 'Open Sans', sans-serif
	&__paginator-list
		display inline-flex
		flex-direction row
		justify-content center
		align-items center
		width auto
		margin-top 40px
		li
			margin-right 15px
			&:first-child
				a
					padding 0 20px 0 14px
					svg
						margin-right 4px
			&:last-child
				margin-right 0
				a
					padding 0 14px 0 20px
					svg
						margin-left 4px
		a
			display flex
			flex-direction row
			justify-content center
			align-items center
			height 40px
			border-radius 8px
			background-color $bg2
			border 1px solid rgba($clr1, .4)
			font-family 'Open Sans', sans-serif
			span
				font-size 12px
				color $white
				font-weight 400
				transition color .5s ease
				text-transform uppercase
			svg
				width 20px
				height 20px
				fill $white
				transition fill .5s ease
			&:hover
				border-color rgba($clr1, .8)
				svg
					fill $clr1
	@media (min-width: 768px)
		padding 25px 0 40px
		&__title
			margin-bottom 10px
		&__title-stat
			margin-top 10px
		&__title-wrap
			flex-direction row
			justify-content space-between
			align-items center
			width auto
			margin-top 0
		&__title-form
			width 240px
			margin-top 0
		&__paginator-pages
			margin-top auto
		&__paginator-list
			display none
	@media (min-width: 1200px)
		padding 0 15px 40px 295px
		margin-top 0
		&__title
			padding-bottom 0
			height 80px

/*==============================
	Catalog
==============================*/
.catalog
	position relative
	width 100%
	overflow hidden
	&__table
		width 100%
		min-width 990px
		margin-top 20px
		thead
			border-bottom 20px solid $bg
			th
				font-size 12px
				color $grey
				font-weight 300
				padding 0 20px 0 20px
				line-height 100%
				margin-bottom 0
				border none
		tbody
			tr
				background-color $bg2
				border-bottom 10px solid $bg
			td
				padding 15px 20px
	&__text
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		position relative
		font-size 14px
		color $white
		font-family 'Open Sans', sans-serif
		font-weight 400
		line-height 24px
		a
			color $white
			&:hover
				color $clr1
		&--rate
			font-family 'Ubuntu', sans-serif
			font-weight 500
			font-size 16px
			padding-left 20px
