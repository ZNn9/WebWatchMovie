		margin-top 24px

/*==============================
	Filter
==============================*/
.filter
	&__select
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		width auto
		min-width 124px
		margin-right 20px
		padding 0 20px
		border-radius 8px
		border 1px solid rgba($white, .02)
		background $gr3
		&:focus
			box-shadow none
		&:last-child
			margin-right 0
		.ss-single
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			height 44px
			padding 0
			margin 0 !important
			color $white
			font-size 14px
			font-family 'Open Sans', sans-serif
		.ss-arrow
			width 8px
			height 8px
			margin 3px 0 0 6px
			path
				stroke $white
		.ss-search
			padding 0
			margin-bottom 15px
			font-size 12px
			color $grey
			width 100%
			&:last-child
				margin-bottom 0
			input
				padding 0
				background-color transparent
				color $white
				font-size 14px
				font-family 'Open Sans', sans-serif
				border-radius 0
				border none
				border-bottom 1px solid rgba($white, .1)
				height 46px
				&:focus
					box-shadow none
				&::placeholder
					color $grey
		.ss-list
			width 100%
			.ss-option
				font-size 14px
				font-family 'Open Sans', sans-serif
				color $white
				line-height 38px
				padding 0
				transition .5s ease
