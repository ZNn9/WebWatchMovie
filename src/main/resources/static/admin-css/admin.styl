	&__user
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
	&__meta
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		h3
			color $white
			display block
			font-size 16px
			line-height 24px
			font-weight 400
			margin-bottom 0
		span
			font-family 'Open Sans', sans-serif
			color $grey
			font-size 14px
			line-height 22px
	&__avatar
		display block
		position relative
		width 46px
		overflow hidden
		border-radius 50%
		margin-right 15px
		img
			width 100%
	&__btns
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
	&__btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 32px
		height 32px
		font-size 16px
		color $white
		border-radius 8px
		background-color rgba($white, .05)
		margin-right 10px
		svg
			width 18px
			height 18px
		&:last-child
			margin-right 0
		&--delete
			background-color rgba(#ec547a, .1)
			svg
				fill #ec547a
			&:hover
				background-color rgba(#ec547a, .2)
				svg
					fill #ec547a
		&--edit
			background-color rgba(#3796f6, .1)
			svg
				fill #3796f6
			&:hover
				background-color rgba(#3796f6, .2)
				svg
					fill #3796f6
		&--banned
			background-color rgba(#5bceae, .1)
			svg
				fill #5bceae
			&:hover
				background-color rgba(#5bceae, .2)
				svg
					fill #5bceae
		&--view
			background-color rgba($clr1, .1)
			svg
				fill rgba($clr1, .8)
			&:hover
				background-color rgba($clr1, .2)
				svg
					fill $clr1
	@media (min-width: 768px)
		&__table
			margin-top 24px

